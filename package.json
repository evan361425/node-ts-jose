{
  "name": "node-ts-jose",
  "version": "0.0.0",
  "description": "Wrap functions of JOSE in steady interface",
  "keywords": [
    "JOSE",
    "helper",
    "wrapper",
    "TypeScript",
    "class based"
  ],
  "homepage": "https://github.com/104corp/node-ts-jose#readme",
  "bugs": {
    "url": "https://github.com/104corp/node-ts-jose/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/104corp/node-ts-jose.git"
  },
  "license": "SEE LICENSE IN LICENSE file",
  "author": "Shueh Chou Lu <evan.lu@104.com.tw>",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist/**/*.js dist/**/*.ts",
    "precompile": "npm run clean",
    "compile": "tsc --project tsconfig.production.json",
    "format": "prettier --write **/*.ts",
    "test": "mocha",
    "pretest-coverage": "npm run clean",
    "test-coverage": "nyc mocha",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "all": "npm run compile && npm run format && npm run lint && npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git secrets --scan"
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "jose": "npm:jose-node-cjs-runtime@^3.11.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^15.3.0",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "chai": "^4.3.0",
    "eslint": "^7",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.0",
    "sinon": "^10.0.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": ">=12"
  }
}
